<%- include('../layout',{title:'Người dùng'}) %>
<div class="content">
    <h1>Danh sách người dùng</h1>
    <a class="buttonA" href="/admin/users/add">Add</a>
    <div class="search-container">
      <form action="/admin/users/search" method="POST">
          <input type="text" name="searchTerm" id="searchTerm" placeholder="Nhập từ khoá...">
          <button type="submit">Tìm</button>
      </form>
    </div>
    <ul class="userul">
        <% users.forEach((u) => { %>
          <li class="userli">
            <div class="user-info">
              <img src="/users/<%= u.Img %>" alt="User Image" width="100" height="100">
              <div class="user-details">
                <p><strong><%= u.Fullname %></strong></p>
                <p><strong>Username:</strong> <%= u.Username %></p>
                <p><strong>Password:</strong> <%= u.Password %></p>
                <p><strong>Email:</strong> <%= u.Email %></p>
                <p><strong>SDT:</strong> <%= u.SDT %></p>
                <p>
                  <strong>Role:</strong>
                  <% if (u.isAdmin === 0) { %>
                    Khách hàng
                  <% } else if (u.isAdmin === 1) { %>
                    Admin
                  <% } else if (u.isAdmin === 2) { %>
                    Bị khoá
                  <% } else { %>
                    Trạng thái không rõ
                  <% } %>
                </p>
              </div>
            </div>
            <a class="buttonU" href="/admin/users/<%= u.Id %>">Cập nhật</a>
          </li>
        <% }); %>
      </ul>      
</div>
<style>
    .userul {
        list-style-type: none;
        padding: 0;
        height: 50px;
    }
    .userli {
        height: 120px;
        margin-bottom: 10px;
        padding: 10px;
        border: 1px solid #ccc;
        background-color: #f9f9f9;
        display: flex;
        align-items: center;
        width: 100%;
        justify-content: space-between;
    }
    .user-details {
  flex: 1; /* Để các phần tử p mở rộng và đẩy button ra bên phải */
}
    .userli p {
        display: table-cell;
        padding: 5px;
        border: 1px solid #ccc;
        text-align: center;
        vertical-align: middle;
    }
    .search-container {
    display: inline;
    text-align: right;
    margin: 50px auto;
    }

    .search-container input[type="text"] {
        width: 300px;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
        outline: none;
    }

    .search-container button {
        padding: 10px 20px;
        background-color: #007BFF;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }

    .search-container button:hover {
        background-color: #0056b3;
    }
</style>