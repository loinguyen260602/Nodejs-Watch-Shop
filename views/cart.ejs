<%- include('header', { pageTitle: 'Giỏ hàng' }) %>
<div class="container">
  <div class="cartinfo">
    <h1 class="cart-title">Your Shopping Cart</h1>
    <div class="cartdetail">
      <ul class="cart-list">
        <% cartContents.forEach(item => { %>
          <li class="cart-item">
            <div class="cart-item-details">
              <div class="cart-item-image">
                <img src="/products/<%= item.img %>" alt="<%= item.name %> Image" width="150">
              </div>
              <div class="cart-item-info">
                <p class="cart-item-name"><strong><%= item.name %></strong></p>
                <p class="cart-item-quantity">Quantity: <%= item.quantity %></p>
                <p class="cart-item-subtotal">Price: <%= item.subtotal %> VNĐ</p>
              </div>
            </div>
            <form action="/cart/remove/<%= item.productId %>" method="post">
              <button class="btnx" type="submit">Xoá</button>
            </form>
          </li>
        <% }); %>
      </ul>
      <div class="e">
        <span class="cart-total">Tổng giá trị giỏ hàng: <%= total %> VNĐ</span>
        <a class="cart-checkout-link" href="/order">Xác nhận đặt hàng</a>
      </div>
    </div>
  </div>
  
</div>
<style>
  .container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.cart-title {
  font-size: 24px;
  margin-bottom: 20px;
}

.cart-list {
  list-style: none;
  padding: 0;
  height: 450px;
  overflow-x: hidden;
  overflow-y: auto;
  white-space: nowrap;
  width: 95%;
  margin: auto;
}

.cart-item {
  border: 1px solid #ddd;
  border-radius: 5px;
  background-color: #f5f5f5;
  margin: 0 0 20px;
  padding: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 150px;
  width: 100%;
  margin: auto;
  margin-bottom: 5px;
}

.cart-item-image img {
  width: 150px;
  height: 100px;
}

.cart-item-name,
.cart-item-quantity,
.cart-item-subtotal {
  font-size: 14px;
  margin: 0;
  width: 150px;
}

.cart-total {
  font-size: 18px;
  font-weight: bold;
  display: block;
  float: right;
}

.cart-checkout-link {
  padding: 10px 20px;
  background-color: #007bff;
  color: #fff;
  text-decoration: none;
  border-radius: 5px;
  margin-top: 15px;
  font-size: 16px;
  float: right;
}

.cart-checkout-link:hover {
  background-color: #0056b3;
}
.e{
  float: right;
  margin-top: 10px;
  margin-right: 15px;
  height: 80px;
  width: 400px;
}
.cart-item-info{
  margin-top: 20px;
  margin-left: 50px;
}
.cart-item-details{
  margin-top: 80px;
}
.cartinfo{
  background-color: rgb(248, 216, 129);
  width: 800px;
}
.btnx{
  background-color: #bd8c22; 
  color: #fff;
  border: none;
  padding: 5px 10px;
  border-radius: 3px;
}
.btnx:hover{
  background-color: #bd3513;
}
</style>
<%- include('footer') %>
