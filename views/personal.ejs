<%- include('header',{pageTitle:'Tài khoản'}) %>
<div class="user-profile">
  <h1>Trang cá nhân</h1>
  <div class="user-details">
    <img src="/users/<%= user.Img %>" alt="User Image" width="150">
    <h2><%= user.Fullname %></h2>
    <div class="user-info">
      <p><strong>Username:</strong> <%= user.Username %></p><br>
      <p><strong>Email:</strong> <%= user.Email %></p><br>
      <p><strong>Phone:</strong> <%= user.SDT %></p><br>
    </div>
    <form method="POST" action="/dmk">
      <input type="hidden" name="uid" id="uid" value="<%= user.Id %>">
      <input type="password" name="mk" placeholder="Mật khẩu mới" id="mk" required>
      <button type="submit" name="button" value="dmk">Đổi mật khẩu</button>
    </form>
  </div>
</div>
<style>
.user-profile {
  margin-left: 300px;
  text-align: center;
  padding: 20px;
  position: absolute;
  width: 1000px;
}

.user-details {
  border: 1px solid #ddd;
  padding: 20px;
  border-radius: 5px;
  background-color: #f5f5f5;
  margin-top: 50px;
  height: 600px;
}
.user-info{
  margin-left: 200px;
  margin-top: 150px;
}

</style>
<%- include('footer') %>