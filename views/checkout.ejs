<%- include('header', { pageTitle: 'Đặt hàng' }) %>
<div class="container">
  <div class="cartinfo">
    <h1>Checkout</h1>
    <p>Order details:</p>
    <ul class="cart-list">
      <% cartContents.forEach(item => { %>
        <li class="cart-item">
          <div class="cart-item-details">
            <div class="cart-item-image">
              <img src="/products/<%= item.img %>" alt="Product Image" width="150">
            </div>
            <div class="cart-item-info">
              <p class="cart-item-name"><strong><%= item.name %></strong></p>
              <p class="cart-item-quantity">Quantity: <%= item.quantity %></p>
              <p class="cart-item-subtotal">Price: <%= item.price * item.quantity %> VNĐ</p>
            </div>
          </div>
        </li>
      <% }); %>
    </ul>
    <div class="e">
      <p class="cart-total">Total Order Value: <%= total %> VNĐ</p>
      
    </div>
    <form class="f" action="/order/create" method="POST">
      <label for="address">Address:</label>
      <input class="i" type="text" id="address" name="address" required>
      <input type="hidden" id="userid" name="userid" value="<%= user.Id %>">
      <button class="cart-checkout-link" type="submit">Place Order</button>
    </form>
  </div>
</div>
<%- include('footer') %>

